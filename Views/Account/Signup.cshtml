
@model SignUpViewModel
@{
    ViewData["Title"] = "Signup";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="mai-agileinfo">
<div asp-validation-summary="All" class="text-danger"></div>
<div class="agile-top">
    <form asp-action="SignUp">
        <input type="text" asp-for="FirstName" placeholder="First Name" required="" class="form-control" />
        <input type="text" asp-for="LasttName" placeholder="Last Name" required="" class="form-control" />
        <input type="text email" asp-for="Email" placeholder="Email" required="" class="form-control" />
        <input type="password" asp-for="Password" placeholder="Password" required="" class="form-control" />
        <input type="password" asp-for="ConfimPassword" placeholder="Confirm Password" required="" class="form-control" />

        <input type="submit" value="SIGNUP" />
    </form>
    <p>Dont't have an account <a asp-action="SignIn">Login Now!</a></p>
</div>
</div>

